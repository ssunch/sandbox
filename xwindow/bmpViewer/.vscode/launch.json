    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bmp",
            "args": ["4k-wallpaper-automobile-automotive-branding-1149137.bmp"],
            //"args": ["/mnt/hgfs/Share/personal/mid.bmp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "gcc build active file",
            "miDebuggerPath": "/bin/gdb"
        }
    ]
